<rss-configuration>
  <!-- RSS database used to store database servers, database instance information, users etc.. -->
  <rss-mgt-repository>
      <datasource-config>
         <dataSourceClassName>com.mysql.jdbc.jdbc2.optional.MysqlXADataSource</dataSourceClassName>
         <dataSourceProps>
            <property name="URL">jdbc:mysql://<%= mysql_server_2 %>:<%= mysql_port %>/<%= rss_database %></property>
            <property name="user"><%= rss_user %></property>
            <property name="password"><%= rss_password %></property>
         </dataSourceProps>
      </datasource-config>
  </rss-mgt-repository>

  <!-- WSO2 RSS instances are predefined constant server instances to be used by users,
       the other type is User Defined RSS instances, 
       which are defined by individual tenants -->
      <rss-environments>
                <rss-environment>
                        <name><%= rss_dev_instance_prefix %></name>
                        <rss-provider>MYSQL</rss-provider>
                        <rss-instances>
                                <rss-instance>
                                        <name><%= rss_dev_instance_prefix %></name>
                                        <instance-type>WSO2_RSS</instance-type>
                                        <dbms-type>MYSQL</dbms-type>
                                        <server-category>LOCAL</server-category>
                                        <datasource-config>
                                             <url>jdbc:mysql://rss.dev.<%= wso2_env_domain %>:<%= mysql_port %></url>
                                             <username><%= rss_instance_user %></username>
                                             <password><%= rss_instance_password %></password>
                                             <driverClassName>com.mysql.jdbc.Driver</driverClassName>
                                        </datasource-config>
                                </rss-instance>
                        </rss-instances>
                </rss-environment>
                <rss-environment>
                        <name><%= rss_test_instance_prefix %></name>
                        <rss-provider>MYSQL</rss-provider>
                        <rss-instances>
                                <rss-instance>
                                        <name><%= rss_test_instance_prefix %></name>
                                        <instance-type>WSO2_RSS</instance-type>
                                        <dbms-type>MYSQL</dbms-type>
                                        <server-category>LOCAL</server-category>
                                        <datasource-config>
                                             <url>jdbc:mysql://rss.test.<%= wso2_env_domain %>:<%= mysql_port %></url>
                                             <username><%= rss_instance_user %></username>
                                             <password><%= rss_instance_password %></password>
                                             <driverClassName>com.mysql.jdbc.Driver</driverClassName>
                                        </datasource-config>
                                </rss-instance>
                        </rss-instances>
                </rss-environment>
                <rss-environment>
                        <name><%= rss_staging_instance_prefix %></name>
                        <rss-provider>MYSQL</rss-provider>
                        <rss-instances>
                                <rss-instance>
                                        <name><%= rss_staging_instance_prefix %></name>
                                        <instance-type>WSO2_RSS</instance-type>
                                        <dbms-type>MYSQL</dbms-type>
                                        <server-category>LOCAL</server-category>
                                        <datasource-config>
                                             <url>jdbc:mysql://rss.staging.<%= wso2_env_domain %>:<%= mysql_port %></url>
                                             <username><%= rss_instance_user %></username>
                                             <password><%= rss_instance_password %></password>
                                             <driverClassName>com.mysql.jdbc.Driver</driverClassName>
                                        </datasource-config>
                                </rss-instance>
                        </rss-instances>
                </rss-environment>
                <rss-environment>
                        <name><%= rss_prod_instance_prefix %></name>
                        <rss-provider>MYSQL</rss-provider>
                        <rss-instances>
